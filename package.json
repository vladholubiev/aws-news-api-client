{
  "name": "@vladholubiev/aws-news-api-client",
  "version": "2.1.0",
  "description": "AWS News API Client with retry behavior",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "hello@vladholubiev.com",
    "url": "https://vladholubiev.com"
  },
  "main": "lib",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rm -rf lib/ && pnpm build:types && pnpm build:code",
    "build:code": "tsc --project tsconfig.build.json --outDir lib",
    "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly --declaration --isolatedModules false --declarationDir lib",
    "coverage": "pnpm test --coverage",
    "lint": "pnpm lint:ci --fix",
    "lint:ci": "eslint . --ext .js,.ts,.json",
    "prepack": "pnpm build",
    "test": "TZ=UTC jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "lint-staged": {
    "*.{html,md,yml}": [
      "prettier --write"
    ],
    "*.{js,ts,json}": [
      "eslint --fix"
    ],
    ".circleci/config.yml": [
      ".husky/validate-circleci-config.sh"
    ]
  },
  "prettier": "@shelf/prettier-config",
  "dependencies": {
    "p-retry": "6.2.1"
  },
  "devDependencies": {
    "@shelf/eslint-config": "5.2.3",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.1.0",
    "@swc/jest": "^0.2.39",
    "@types/jest": "30.0.0",
    "@types/node": "22",
    "eslint": "9.32.0",
    "husky": "9.1.7",
    "jest": "30.0.5",
    "lint-staged": "16.1.4",
    "prettier": "3.6.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  }
}
